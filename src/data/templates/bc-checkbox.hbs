<bc-checkbox 
  componentId="{{componentId}}"
  {{#if label}}label="{{label}}"{{/if}}
  {{#if checked}}checked="{{boolean checked}}"{{/if}}
  {{#if disabled}}disabled="{{boolean disabled}}"{{/if}}
  {{#if required}}required="{{boolean required}}"{{/if}}
  {{#if indeterminate}}indeterminate="{{boolean indeterminate}}"{{/if}}
  {{#if value}}value="{{value}}"{{/if}}
  {{#if name}}name="{{name}}"{{/if}}
></bc-checkbox> 