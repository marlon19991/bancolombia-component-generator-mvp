<bc-modal 
  componentId="{{componentId}}"
  {{#if title}}title="{{title}}"{{/if}}
  {{#if content}}content="{{content}}"{{/if}}
  {{#if size}}size="{{size}}"{{/if}}
  {{#if closable}}closable="{{boolean closable}}"{{/if}}
  {{#if backdrop}}backdrop="{{boolean backdrop}}"{{/if}}
  {{#if primaryAction}}primaryAction="{{primaryAction}}"{{/if}}
  {{#if secondaryAction}}secondaryAction="{{secondaryAction}}"{{/if}}
  {{#if type}}type="{{type}}"{{/if}}
  {{#if icon}}icon="{{icon}}"{{/if}}
></bc-modal> 